        function show(data, m) {
            let tab = 
            `<tr></tr>`;        
        // Loop to access all rows 
        for (let r of data) {
            if(r.cat_id==m)
            {
                tab += `<tr> 
                    <td><h2>${r.food_item_name}</h2>
                    <em>${r.price}</em>
                    <p>${r.description}</p>
                    </td>
                    <td><em><input type="button" value="+" onclick="addOrder(${r.food_item_id})"></em></td>
                </tr>`;
            }  
        }
        // Setting innerHTML as tab variable
        document.getElementById("menu-item1").innerHTML = tab;
    }


   
